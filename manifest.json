{
  "manifest_version": 3,
  "name": "MOOCs Add Rare Event",
  "version": "0.1.0",
  "description": "INIAD MOOCs に確率で発生するイベントを追加して日々のMOOCsライフに彩りを与える拡張機能。",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
  {
    "matches": ["https://moocs.iniad.org/courses"],
    "js": ["src/content.ts"]
  }
],
  "web_accessible_resources": [
    {
      "resources": ["*.png",
      "*.svg",
      "*.html",
      "src/event/**/pic/*.png",
      "src/effect/pic/*.png",
      "src/event/redRoom/redRoom.html",
      "assets/*"],
      "matches": ["https://moocs.iniad.org/*"]
    }
  ],
  "permissions": []
}