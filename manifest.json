{
  "manifest_version": 3,
  "name": "MOOOcs Add Rare Event",
  "version": "0.1.0",
  "description": "INIAD MOOCs に確率で発生するイベントを追加して日々のMOOCsライフに彩りを与える拡張機能。",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },

  
  "content_scripts": [
  {
    "matches": ["https://moocs.iniad.org/courses"],
    "js": ["src/content.ts"]
  }
],
  "web_accessible_resources": [
    {
      "resources": ["poniko.png", "uboa.png", "src/event/uboa/uboaEvent.js",
               "src/event/uboa/uboa.html", "uboaEventFin.png"],
      "matches": ["https://moocs.iniad.org/*"]
    }
  ],
  "permissions": []
}
